<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Roman_DB_CURSED"
    x:Class="Roman_DB_CURSED.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="500" Width="1000"
    d:DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>

        <TabControl TabStripPlacement="Left">
            <TabItem Header="Номенклатуры">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="NomGrid" ItemsSource="{Binding Noms}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить"  Click="AddNom" />
                        <Button Height="50" Width="50" Content="изменить"  Click="EditNom"/>
                        <Button Height="50" Width="50" Content="удалить"   Click="DelNom"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Спецификации">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="ResSpecGrid" ItemsSource="{Binding Resspecs}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddResSpec"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditResSpec"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelResSpec"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Склады">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="StorageGrid" AutoGenerateColumns="False" ItemsSource="{Binding Storages}" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Path=StorageName}" />


                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddStorage"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditStorage"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelStorage"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Содержание складов">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="StorageContainsGrid" ItemsSource="{Binding Storagecontains}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddStorageContains"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditStorageContains"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelStorageContains"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Меры измерения">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="MeasureGrid" AutoGenerateColumns="False" ItemsSource="{Binding Measures}" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Path=MeasureName}" />


                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddMeasure"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditMeasure"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelMeasure"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Заказы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="OrderGrid" ItemsSource="{Binding Orders}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddOrder"  />
                        <Button Height="50" Width="50" Content="изменить" Click="EditOrder"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelOrder"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Cтатусы заказов">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="OrderStausGrid" ItemsSource="{Binding Orderstatus}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddOrderStatus" />
                        <Button Height="50" Width="50" Content="изменить" Click="EditOrderStatus"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelOrderStatus"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Стадия производства">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="ProdStageGrid" ItemsSource="{Binding Prodstages}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddProdStage"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditProdStage"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelProdStage"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="resspecnoms">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="Grid2"  ItemsSource="{Binding Resspecnoms}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddResSpecNoms"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditResSpecNoms"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelResSpecNoms"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Подразделения">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="SubdivisionGrid"  ItemsSource="{Binding Subdivisions}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddSubDivision"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditSubDivision"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelSubDivision"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Технокарта">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="TechMapGrid" ItemsSource="{Binding Techmaps}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddTechMap"/>
                        <Button Height="50" Width="50" Content="изменить" Click="EditTechMap"/>
                        <Button Height="50" Width="50" Content="удалить" Click="DelTechMap"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Тип номенклатуры">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid  x:Name="NomTypeGrid" ItemsSource="{Binding Nomtypes}" IsReadOnly="True" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Height="50" Width="50" Content="добавить" Click="AddNomType"/>
                        <Button Height="50" Width="50" Content="изменить" />
                        <Button Height="50" Width="50" Content="удалить" />

                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>